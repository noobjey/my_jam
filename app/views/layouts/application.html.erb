<!DOCTYPE html>
<html>
<head>
  <title>MyJam</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <div>Welcome <%= current_user.username %> | <%= link_to 'Logout', logout_path, method: :delete %></div>

<% elsif !current_page?(login_path) %>
  <div><%= link_to 'Login', login_path %></div>
<% end %>


<% if flash[:error] %>
  <div><%= flash[:error] %></div>
<% elsif flash[:notice] %>
  <div><%= flash[:notice] %></div>
<% end %>

<% if current_user %>
  <p>
    <strong>Newest song:</strong> <%= session[:most_recent_song_title] %>
  </p>
<% end %>

<%= yield %>

</body>
</html>
